<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Step2Fragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/typeOfCrimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/selected_type_of_crime_background"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/descriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Type of crime: "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textViewValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/crime_button_background"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center_vertical"
                    android:hint="Select a crime"
                    android:paddingStart="25dp"
                    android:textColor="@color/less_color"
                    android:textSize="14dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_description" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Help us with more info about the crime."
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Date Icon"
                    android:src="@drawable/ic_identified" />

                <TextView
                    android:id="@+id/personLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Do you know the person?"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <Button
                    android:id="@+id/yesButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:onClick="onYesButtonClick"
                    android:text="Yes"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/noButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:onClick="onNoButtonClick"
                    android:text="No"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/animatedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@id/enterPersonEditTextNameLayout"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/enterPersonNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/enterPersonNameImageView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="Date Icon"
                        android:src="@drawable/ic_person" />

                    <TextView
                        android:id="@+id/personNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Enter person name"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/enterPersonEditTextNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/enterPersonEditTexts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Enter person name"
                        android:paddingStart="10dp"
                        android:textSize="12.5dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/enterPersonNameLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="Date Icon"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/dateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="When it happened?"
                        android:textSize="15sp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/buttonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:padding="2dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/todayButton"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_background"
                            android:text="Today" />

                        <Button
                            android:id="@+id/yesterdayButton"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_background"
                            android:text="Yesterday" />

                        <Button
                            android:id="@+id/selectDateButton"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1.5"
                            android:background="@drawable/button_background"
                            android:text="Select Date" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/dateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iconImageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:foregroundGravity="center"
                        android:padding="10dp"
                        android:src="@drawable/back_icon"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="Time Icon"
                        android:src="@drawable/ic_clock" />

                    <TextView
                        android:id="@+id/timeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="What time it happened?"
                        android:textSize="15sp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/timeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/hourIncreaseButton"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:layout_alignStart="@+id/hourEditText"
                        android:layout_alignParentTop="true"
                        android:contentDescription="Time Increase"
                        android:src="@drawable/ic_arrow_drop_up" />

                    <EditText
                        android:id="@+id/hourEditText"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/hourDecreaseButton"
                        android:layout_below="@+id/hourIncreaseButton"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="50dp"
                        android:background="@null"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="12"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/hourDecreaseButton"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:layout_alignStart="@+id/hourEditText"
                        android:layout_alignParentBottom="true"
                        android:contentDescription="Time Decrease"
                        android:src="@drawable/ic_arrow_drop_down" />

                    <TextView
                        android:id="@+id/hourLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/hourEditText"
                        android:gravity="center"
                        android:text="h"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/colon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/minuteEditText"
                        android:layout_toEndOf="@+id/hourLabel"
                        android:background="@null"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center"
                        android:inputType="number"
                        android:text=":"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/minuteIncreaseButton"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/minutelabel"
                        android:contentDescription="Time Increase"
                        android:src="@drawable/ic_arrow_drop_up" />

                    <EditText
                        android:id="@+id/minuteEditText"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/minuteDecreaseButton"
                        android:layout_below="@+id/minuteIncreaseButton"
                        android:layout_toStartOf="@+id/minutelabel"
                        android:background="@null"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="00"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/minutelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_toStartOf="@+id/amPmSpinner"
                        android:gravity="center"
                        android:text="m"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/minuteDecreaseButton"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toStartOf="@+id/minutelabel"
                        android:contentDescription="Time Decrease"
                        android:src="@drawable/ic_arrow_drop_down" />

                    <LinearLayout
                        android:id="@+id/amPmSpinner"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/amTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="AM"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/pmTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/amTextView"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="PM"
                            android:textSize="18sp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="Location Icon"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/locationLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Where it happened?"
                        android:textSize="15sp" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/barangayTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_border"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp">

                        <Button
                            android:id="@+id/barangaySpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_selector"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center_vertical"
                            android:hint="Select a barangay"
                            android:paddingStart="18dp"
                            android:paddingEnd="8dp" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/locationImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_maps" />

                    </RelativeLayout>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signUpText">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="or" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/setLocationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/setLocationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Use Current Location"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Switch
                        android:id="@+id/locationSwitchs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />


                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:elevation="8dp">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/loadingImageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:src="@drawable/loading_gif"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/gifTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="100dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Getting your location..."
                        android:textColor="#C10000"
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <org.osmdroid.views.MapView
                        android:id="@+id/mainMapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:background="#80000000"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/locationTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:padding="10dp"
                            android:text="Your Current Location"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/viewMapsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppinsmedium"
                            android:paddingLeft="30dp"
                            android:text=">"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/imageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Location Icon"
                    android:src="@drawable/ic_describe" />

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Can you shortly describe what happened?"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/descriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:hint="Shortly describe what happened"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:minLines="4"
                    android:padding="10dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/autoGenerateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onAutoGenerateClick"
                    android:text="Auto Generate" />

            </LinearLayout>

            <Button
                android:id="@+id/addImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Image" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded_background"
                android:text="Next"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/transparent_button_background"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="25dp"
                android:paddingTop="8dp"
                android:paddingEnd="25dp"
                android:paddingBottom="8dp"
                android:text="Go Back to Step 1"
                android:textColor="@color/black" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
